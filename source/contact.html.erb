      <% data.contact.address.each do |text| %>
        <span class="contact__address"><%= text %></span>
      <% end %>
    </p>
    <div class="btns--left">
      <a href="<%= data.contact.address_link %>" title="See where the surgery is on Google Maps" class="btn--small">View on Google Maps</a>
    </div>
  </div><!--
  --><div class="contact__column">
